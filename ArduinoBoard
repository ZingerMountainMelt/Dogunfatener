#include <SPI.h>
#include <MFRC522.h>
#include "DFRobotDFPlayerMini.h"
#include "SoftwareSerial.h"

SoftwareSerial DFplayer(3, 2);
DFRobotDFPlayerMini myDFPlayer;

#define SS_PIN 10
#define RST_PIN 9
#define LED_G 8 //define green LED
#define LED_R 5 //define red LED
#define LED_Y 4 //define yellow LED

int randNumber1 = 0;
int randNumber2 = 0;
int speakerVolume = 25;

MFRC522 mfrc522(SS_PIN, RST_PIN);   // Create MFRC522 instance.
 
void setup() 
{
  Serial.begin(9600);   // Initiate a serial communication
  SPI.begin();      // Initiate  SPI bus
  mfrc522.PCD_Init();   // Initiate MFRC522
  pinMode(LED_G, OUTPUT);
  pinMode(LED_R, OUTPUT);
  pinMode(LED_Y, OUTPUT);
  Serial.println("Put your card to the reader...");
  Serial.println();
  DFplayer.begin(9600);
  myDFPlayer.begin(DFplayer);
  myDFPlayer.volume(speakerVolume);

}

void loop() 
{
  digitalWrite(LED_Y, HIGH);
  digitalWrite(LED_G, LOW);
  digitalWrite(LED_R, LOW);
  
  // Look for new cards
  if ( ! mfrc522.PICC_IsNewCardPresent()) 
  {
    return;
  }
  // Select one of the cards
  if ( ! mfrc522.PICC_ReadCardSerial()) 
  {
    return;
  }
  //Show UID on serial monitor
  Serial.print("UID tag :");
  String content= "";
  byte letter;
  for (byte i = 0; i < mfrc522.uid.size; i++) 
  {
     Serial.print(mfrc522.uid.uidByte[i] < 0x10 ? " 0" : " ");
     Serial.print(mfrc522.uid.uidByte[i], HEX);
     content.concat(String(mfrc522.uid.uidByte[i] < 0x10 ? " 0" : " "));
     content.concat(String(mfrc522.uid.uidByte[i], HEX));
  }
  Serial.println();
  Serial.print("Message : ");
  content.toUpperCase();
  
  if (content.substring(1) == "1A 08 93 7F")
  {
    Serial.println("Oakley");
    randNumber1 = random(1,5);
    Serial.println(randNumber1);
    myDFPlayer.play(randNumber1);
    digitalWrite(LED_Y, LOW);
    digitalWrite(LED_G, HIGH);
    delay(10000);
    digitalWrite(LED_G, LOW);
    randNumber1 = 0;
  }
 
 else if (content.substring(1) == "69 85 87 C2")
  {
    Serial.println("Chaplin");
    randNumber2 = random(6,10);
    Serial.println(randNumber2);
    myDFPlayer.play(randNumber2);
    digitalWrite(LED_Y, LOW);
    digitalWrite(LED_R, HIGH);
    delay(10000);
    digitalWrite(LED_R, LOW);
    randNumber2 = 0;
  }
  
  else {
    Serial.println("Unknown");
    myDFPlayer.play(1);
    digitalWrite(LED_R, LOW);
    digitalWrite(LED_G, LOW);
    digitalWrite(LED_Y, HIGH);
    delay(200);
    digitalWrite(LED_Y, LOW);
    delay(200);
  }
}
